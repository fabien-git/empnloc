<div class="container">
<h1>Edit employee <%= @employee.first_name %> </h1>
<div class="row">
</div>

<%= simple_form_for(@employee) do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :job_title %>
    <%= f.text_field :job_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price_per_day %>
    <%= f.text_field :price_per_day, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
