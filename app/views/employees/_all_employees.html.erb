<section class="all-employees">

   <div class="container">
    <h2 ><span class="title">Nos employ√©s</span></h2>
   <div class="cards">
    <% employees.each do |employee| %>
      <div class="card shadow">
        <div class="card-gradient">
          <div class="card-avatar">
            <%= cl_image_tag employee.photo.key, width: 100, height: 100, crop: :fill %>
          </div>
        </div>
        <div class="card-info">
          <p class="card-job"><%= employee.job_title %></p>
          <p class="card-price">Prix:  <%= employee.price_per_day %></p>
          <%= link_to "Plus d'informations", employee_path(employee), class:"card-alink" %>
        </div>
      </div>
      <% end %>


    </div>
    </div>
</section>
